import java.util.Scanner;
public class Three
{
    public static void main(String args[])
    {
        //write your code
        Scanner sc=new Scanner(System.in);
        int x1,x2,y1,y2;
        float k,l;
         
        x1=sc.nextInt();//2
        y1=sc.nextInt();//4
        x2=sc.nextInt();//10
        y2=sc.nextInt();//15
        k=(x1+x2)/2;
        l=(y1+y2);
        System.out.printf("Binoy's house is located at (%.1f,%.1f)",k,l/2);//(6.0,9.5)
    }
}
