import java.util.Scanner;
public class Avg
{
    public static void main(String args[])
    {
        //write your code
        Scanner sc=new Scanner(System.in);
        float a,b,c,d,e,f;
        a=sc.nextFloat();
        b=sc.nextFloat();
        c=sc.nextFloat();
        d=sc.nextFloat();
        e=sc.nextFloat();
        f=(a+b+c+d+e)/5;
        System.out.printf("%1.2f",f);
    }
}
