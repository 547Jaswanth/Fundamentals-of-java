import java.util.Scanner;
public class Split
{
    public static void main(String args[])
    {
        //write your code
        Scanner sc=new Scanner(System.in);
        int ns,nt,lt,c;
       
        ns=sc.nextInt();//number of students in the class
        nt=sc.nextInt();//number of teams
       
        lt=ns%nt;//left out students count
        c=ns/nt;//no of teams
        System.out.printf("The number of students in each team is %d and left out is %d",c,lt);
    }
}
